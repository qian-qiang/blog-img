<link rel="stylesheet" type="text/css" href="<%- theme.libs.css.jqcloud %>">
<style type="text/css">
    #gallery-wordcloud {
        width: 100%;
        height: 300px;
    }
</style>

<div class="container" data-aos="fade-up">
    <div class="card">
        <div id="gallery-wordcloud" class="card-content"></div>
    </div>
</div>

<script type="text/javascript" src="<%- theme.libs.js.jqcloud %>"></script>
<script type="text/javascript">
    <%
    let tagWordArr = [];
    site.tags.map(function(tag) {
        if (tag.name.match(/^gallery/)) {
            tag.posts.forEach(function(post) {
                tagWordArr.push({'text': post.title, 'weight': 5, 'link': url_for(post.path)});
            });
        }
    });



    let tagWords = JSON.stringify(tagWordArr);
    %>

    $('#gallery-wordcloud').jQCloud(<%- tagWords %>, {
        autoResize: true
    });
</script>

